<Project>
  <PropertyGroup>
    <_TaskTfm Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard2.0</_TaskTfm>
    <_TaskTfm Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net472</_TaskTfm>

    <_TaskAssembly>$(MSBuildThisFileDirectory)..\tools\$(_TaskTfm)\TouchPortalSDK.Extensions.Tasks.dll</_TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="TouchPortalSDK.Extensions.Tasks.BuildEntryFile" AssemblyFile="$(_TaskAssembly)" />
</Project>
